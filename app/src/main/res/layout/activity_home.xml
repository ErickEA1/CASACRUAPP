<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".General.Home"
    android:background="@drawable/fondo">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimaryDark"
        android:theme="@style/ToolbarColoredBlackArrow"
        app:popupTheme="@style/Theme.ProductosCasaCru"
        app:titleTextColor="@color/white"
        tools:ignore="MissingConstraints"
        >


    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center">

        <ImageButton
            android:id="@+id/btnAlmacen"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"

            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
          android:background="@drawable/icon_almacen"
            android:foreground="@drawable/button_almc"
            android:onClick="CambiarAlmacen" />

        <ImageButton
            android:id="@+id/btnCompras"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:foreground="@drawable/button_comp"
            android:background="@drawable/icon_compras"
            android:onClick="CambiarCompras" />

        <ImageButton
            android:id="@+id/btnVentas"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:foreground="@drawable/button_vent"
            android:background="@drawable/icon_ventas"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:onClick="CambiarVentas"/>

    </LinearLayout>
    </ScrollView>
</androidx.appcompat.widget.LinearLayoutCompat>