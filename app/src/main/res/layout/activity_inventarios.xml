<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Almacen.Inventarios">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimaryDark"
        android:theme="@style/ToolbarColoredBlackArrow"
        app:popupTheme="@style/Theme.ProductosCasaCru"
        app:titleTextColor="@color/white"
        tools:ignore="MissingConstraints"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textFolio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:layout_gravity="center"
                android:gravity="center"
                />

            <Button
                android:id="@+id/btnEscanear"
                android:layout_width="248dp"
                android:layout_height="109dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/escaner" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="146dp">

                <Button
                    android:id="@+id/btnBusca2"
                    android:layout_width="wrap_content"
                    android:layout_height="71dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="22dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="39dp"
                    android:layout_toEndOf="@+id/txtCod"
                    android:layout_toRightOf="@+id/txtCod"
                    android:background="@drawable/img"
                    android:fontFamily="sans-serif-black"
                    android:text="BUSCAR"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/txtCod"
                    android:layout_width="222dp"
                    android:layout_height="81dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="34dp"
                    android:ems="10"
                    android:fontFamily="sans-serif-black"
                    android:inputType="textPersonName"
                    android:textColor="@color/black" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/LyDatos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/textNomPro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:layout_margin="20dp"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-black"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Existencia
                        Actual"
                        android:gravity="center"
                        android:textSize="22sp"
                        android:layout_margin="15dp"/>

                        <TextView
                            android:id="@+id/txtExistenciaActual"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textSize="22sp"
                            android:layout_margin="15dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Existencia
                        Contada"
                        android:textSize="22sp"
                        android:gravity="center"
                        android:layout_margin="15dp"/>

                        <EditText
                            android:id="@+id/txtExistenciaContada"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textSize="22sp"
                            android:inputType="numberDecimal"
                            android:layout_margin="15dp"/>
                </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/buttonGuardar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Guardar"
                    android:textSize="22sp"
                    android:background="@drawable/ovalo"
                    android:layout_margin="20dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
        </LinearLayout>
