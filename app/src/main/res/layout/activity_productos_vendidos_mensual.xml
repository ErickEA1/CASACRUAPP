<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondo"
    tools:context=".Almacen.VendidosMensual">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorPrimaryDark"
                android:theme="@style/ToolbarColoredBlackArrow"
                app:popupTheme="@style/Theme.ProductosCasaCru"
                app:titleTextColor="@color/white"
                tools:ignore="MissingConstraints"/>

            <LinearLayout
                android:id="@+id/lytiendas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Seleccione las tiendas"
                    android:textSize="24sp"
                    android:textColor="@color/purple_700"
                    android:fontFamily="sans-serif-black"
                    android:textAlignment="center"
                    android:layout_marginBottom="15dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/chDengui1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:checked="false"
                        android:fontFamily="sans-serif-black"
                        android:text="Tienda Dengui"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <CheckBox
                        android:id="@+id/chNopala1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-black"
                        android:text="Tienda Nopala"
                        android:checked="false"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/ch611"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-black"
                        android:text="Tienda 61"
                        android:checked="false"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <CheckBox
                        android:id="@+id/chLagunas1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:checked="false"
                        android:fontFamily="sans-serif-black"
                        android:text="Tienda Lagunas"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/chSD1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="false"
                        android:fontFamily="sans-serif-black"
                        android:text="Tienda Santo Domingo"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <CheckBox
                        android:id="@+id/chMR1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:checked="false"
                        android:fontFamily="sans-serif-black"
                        android:text="Tienda Matias Romero"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                </LinearLayout>


                <Button
                    android:id="@+id/btnsave"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Guardar"
                    android:textSize="18sp"
                    android:background="@drawable/button_op2"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"/>
            </LinearLayout>


            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/style_spinner"/>


            <Button
                android:id="@+id/btnEscanear"
                android:layout_width="248dp"
                android:layout_height="109dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/escaner" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="146dp">

                <Button
                    android:id="@+id/btnBusca2"
                    android:layout_width="wrap_content"
                    android:layout_height="71dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="22dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="39dp"
                    android:layout_toEndOf="@+id/txtCod"
                    android:layout_toRightOf="@+id/txtCod"
                    android:background="@drawable/img"
                    android:fontFamily="sans-serif-black"
                    android:text="BUSCAR"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/txtCod"
                    android:layout_width="222dp"
                    android:layout_height="81dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="34dp"
                    android:ems="10"
                    android:fontFamily="sans-serif-black"
                    android:inputType="textPersonName"
                    android:textColor="@color/black" />
            </RelativeLayout>
<TextView
    android:id="@+id/txtNombre"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    android:textSize="18dp"
    android:textAlignment="center"
    android:fontFamily="sans-serif-black"
    android:visibility="gone"/>

            <TextView
                android:id="@+id/txtPromedio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:textSize="18dp"
                android:textAlignment="center"
                android:fontFamily="sans-serif-black"
                android:visibility="gone"/>

                <ProgressBar
                    android:id="@+id/progressBar5"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:visibility="gone"/>
            </LinearLayout>

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/linechart"
                android:layout_width="match_parent"
                android:layout_height="380dp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>