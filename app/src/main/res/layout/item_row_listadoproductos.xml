    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/linearlayout">



        <TextView
            android:id="@+id/txtCodProd"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
